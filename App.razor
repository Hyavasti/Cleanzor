<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            @if (routeData.PageType == typeof(Pages.Login))
            {
                <RouteView RouteData="@routeData" />
            }
            else
            {
                <AuthorizeRouteView RouteData="@routeData">

                    <NotAuthorized>
                        <div style="text-align:center; margin-top:100px;">
                            <h1 style="font-size:4rem; color:#e74c3c;">403</h1>
                            <h3 style="margin-bottom:0.5rem;">Access Denied</h3>
                            <p>You don’t have permission to view this page.</p>
                            <button 
                                style="margin-top:20px; padding:10px 20px; background:#3498db; color:white; border:none; border-radius:8px; cursor:pointer;"
                                @onclick="GoHome">
                                Go to Home
                            </button>
                        </div>
                    </NotAuthorized>
                </AuthorizeRouteView>
            }
        </Found>

        <NotFound>
            <div style="text-align:center; margin-top:100px;">
                <h1>404</h1>
                <p>Page not found.</p>
            </div>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    [Inject] private NavigationManager NavManager { get; set; } = default!;

    private void GoHome()
    {
        NavManager.NavigateTo("/");
    }
}
