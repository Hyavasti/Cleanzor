    @if (isLoading)
    {
        <div class="loading-overlay">
            <div class="loader">
                CLEANZOR LOADING...
            </div>
        </div>
    }

    isLoading = true;
                    StateHasChanged();
                    await ShowLoadingAndRedirect("/dashboard", 1500);
                    AuthProvider.NotifyUserChanged(txtemail);

private async Task ShowLoadingAndRedirect(string url)
{
    isLoading = true;
    await Task.Delay(1250);
    Navigation.NavigateTo(url);
}

private bool isLoading { get; set; } = false;

.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.80);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.loader {
  color: #fff;
  font-size: clamp(1.5rem, 4vw, 2rem);
  font-family: 'Montserrat';
  font-weight: 700;
}
